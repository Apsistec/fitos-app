{
  "name": "fitos-mobile",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "sourceRoot": "apps/mobile/src",
  "prefix": "app",
  "targets": {
    "build": {
      "executor": "@angular-devkit/build-angular:application",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/apps/mobile",
        "index": "apps/mobile/src/index.html",
        "browser": "apps/mobile/src/main.ts",
        "polyfills": ["zone.js"],
        "tsConfig": "apps/mobile/tsconfig.app.json",
        "inlineStyleLanguage": "scss",
        "assets": [
          {
            "glob": "**/*",
            "input": "apps/mobile/src/assets",
            "output": "/assets"
          },
          {
            "glob": "**/*.svg",
            "input": "node_modules/ionicons/dist/ionicons/svg",
            "output": "./svg"
          },
          {
            "glob": "manifest.webmanifest",
            "input": "apps/mobile/src",
            "output": "/"
          },
          {
            "glob": "ngsw-config.json",
            "input": "apps/mobile/src",
            "output": "/"
          }
        ],
        "styles": [
          "apps/mobile/src/theme/variables.scss",
          "apps/mobile/src/global.scss"
        ],
        "scripts": [],
        "optimization": {
          "scripts": true,
          "styles": {
            "minify": true,
            "inlineCritical": false
          },
          "fonts": true
        },
        "externalDependencies": [
          "@angular/cdk",
          "@angular/service-worker"
        ]
      },
      "configurations": {
        "production": {
          "budgets": [
            {
              "type": "initial",
              "maximumWarning": "3mb",
              "maximumError": "5mb"
            },
            {
              "type": "anyComponentStyle",
              "maximumWarning": "9kb",
              "maximumError": "10kb"
            }
          ],
          "outputHashing": "all",
          "fileReplacements": [
            {
              "replace": "apps/mobile/src/environments/environment.ts",
              "with": "apps/mobile/src/environments/environment.prod.ts"
            }
          ],
          "serviceWorker": "apps/mobile/ngsw-config.json"
        },
        "development": {
          "optimization": false,
          "extractLicenses": false,
          "sourceMap": true
        }
      },
      "defaultConfiguration": "production"
    },
    "serve": {
      "executor": "@angular-devkit/build-angular:dev-server",
      "configurations": {
        "production": {
          "buildTarget": "fitos-mobile:build:production"
        },
        "development": {
          "buildTarget": "fitos-mobile:build:development"
        }
      },
      "defaultConfiguration": "development",
      "options": {
        "port": 4200
      }
    },
    "test": {
      "executor": "nx:run-commands",
      "options": {
        "command": "vitest run --config apps/mobile/vitest.config.ts",
        "cwd": "{workspaceRoot}"
      },
      "configurations": {
        "ci": {
          "command": "vitest run --config apps/mobile/vitest.config.ts --reporter=default --coverage"
        },
        "watch": {
          "command": "vitest --config apps/mobile/vitest.config.ts"
        }
      }
    },
    "lint": {
      "executor": "@angular-eslint/builder:lint",
      "options": {
        "lintFilePatterns": [
          "apps/mobile/src/**/*.ts",
          "apps/mobile/src/**/*.html"
        ]
      }
    }
  },
  "tags": ["type:app", "platform:mobile"]
}
